{
  "name": "crm-mvp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "deploy:netlify": "./scripts/deploy.sh --platform netlify",
    "deploy:vercel": "./scripts/deploy.sh --platform vercel",
    "deploy:manual": "./scripts/deploy.sh --platform manual",
    "deploy:staging": "./scripts/deploy.sh --platform netlify --environment staging",
    "deploy:production": "./scripts/deploy.sh --platform netlify --environment production",
    "build:analyze": "vite build --mode analyze",
    "build:staging": "NODE_ENV=staging vite build",
    "build:production": "NODE_ENV=production vite build",
    "setup:db": "./database/setup.sh",
    "setup:env": "cp .env.example .env && echo 'Please configure your environment variables in .env'",
    "clean": "rm -rf dist node_modules/.vite",
    "update:deps": "npm update",
    "check:security": "npm audit",
    "fix:security": "npm audit fix"
  },
  "dependencies": {
    "@sentry/browser": "^10.10.0",
    "@supabase/supabase-js": "^2.56.0",
    "chart.js": "^4.5.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "happy-dom": "^18.0.1",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
