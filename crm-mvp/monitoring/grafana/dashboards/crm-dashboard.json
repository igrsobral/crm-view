{
    "dashboard": {
        "id": null,
        "title": "CRM MVP Dashboard",
        "tags": [
            "crm",
            "application"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Application Health",
                "type": "stat",
                "targets": [
                    {
                        "expr": "up{job=crm-mvp}",
                        "legendFormat": "Application Status"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "options": {
                                    "0": {
                                        "text": "DOWN",
                                        "color": "red"
                                    },
                                    "1": {
                                        "text": "UP",
                                        "color": "green"
                                    }
                                },
                                "type": "value"
                            }
                        ]
                    }
                },
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Response Time",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=crm-mvp}[5m]))",
                        "legendFormat": "95th percentile"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=crm-mvp}[5m]))",
                        "legendFormat": "50th percentile"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 6,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Request Rate",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=crm-mvp}[5m])",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Error Rate",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=crm-mvp,status=~5..}[5m])",
                        "legendFormat": "5xx errors"
                    },
                    {
                        "expr": "rate(http_requests_total{job=crm-mvp,status=~4..}[5m])",
                        "legendFormat": "4xx errors"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Database Connections",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "pg_stat_database_numbackends{datname=postgres}",
                        "legendFormat": "Active connections"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "Memory Usage",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes{job=crm-mvp}",
                        "legendFormat": "Resident memory"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                }
            },
            {
                "id": 7,
                "title": "Top API Endpoints",
                "type": "table",
                "targets": [
                    {
                        "expr": "topk(10, sum(rate(http_requests_total{job=crm-mvp}[5m])) by (route))",
                        "format": "table",
                        "instant": true
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 24
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "refresh": "30s"
    }
}