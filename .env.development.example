# Development Environment Variables
# Copy this file to .env.local for local development

# Supabase Configuration - Local Development
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your_local_supabase_anon_key

# Application Configuration
VITE_APP_TITLE="Contactly CRM (Dev)"
VITE_APP_DESCRIPTION="Professional CRM for managing contacts, deals, and activities - Development Mode"
VITE_APP_VERSION="1.0.0-dev"

# Development Settings
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_REDUX_DEVTOOLS=true

# Performance Settings (relaxed for development)
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_OFFLINE_MODE=false

# Security Settings (relaxed for development)
VITE_ENABLE_HTTPS_ONLY=false
VITE_ENABLE_CSP=false
VITE_ENABLE_HSTS=false

# Analytics and Monitoring (disabled for development)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Development Specific
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_API_MOCKING=false

# Feature Flags (enabled for testing)
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=true

# API Configuration (faster timeouts for development)
VITE_API_TIMEOUT=10000
VITE_MAX_UPLOAD_SIZE=10485760
VITE_ENABLE_API_CACHING=false

# UI/UX Settings
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND_EFFECTS=false

# Database Configuration (for local Supabase)
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key