# Production Environment Variables
# Copy this file to .env.production for production builds

# Supabase Configuration - REQUIRED
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Application Configuration
VITE_APP_TITLE="Contactly CRM"
VITE_APP_DESCRIPTION="Professional CRM for managing contacts, deals, and activities"
VITE_APP_VERSION="1.0.0"

# Performance Optimizations
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=true

# Security Settings
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional Third-party Integrations
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=
# VITE_HOTJAR_ID=

# Build Optimizations
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_TREE_SHAKING=true
VITE_ENABLE_CODE_SPLITTING=true

# Feature Flags
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_DEBUG_MODE=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_UPLOAD_SIZE=10485760
VITE_ENABLE_API_CACHING=true

# UI/UX Settings
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND_EFFECTS=false